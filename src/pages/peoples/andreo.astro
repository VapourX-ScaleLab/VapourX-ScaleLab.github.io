---
import { Button, Card } from 'astro-pure/user'
import PersonLayout from '@/layouts/PersonLayout.astro'
import Icon from '@/components/custom/Icon.astro'

const person = {
  name: 'Andreo Y.（杨锦畅）',
  avatar: 'https://avatars.githubusercontent.com/u/33977087?v=4',
  organization: 'SJTU',
  role: '社区网页设计师',
  slogan: '我是关羽',
  description: '专注于前端开发和用户体验设计，致力于创造美观且实用的Web界面，管理后端数据库。对深度强化学习、世界模型等具身相关领域有浓厚兴趣。',
  github: 'https://github.com/hzyangjc',
  website: 'https://andreoy.cn',
  email: 'andreo_y@sjtu.edu.cn',
  bilibili: 'https://space.bilibili.com/390331430',
  tags: [],
  linkedin: '',
  twitter: '',
  skills: [
    {
      title: '前端开发',
      description: '精通现代前端技术栈，包括 CSS、React、HTML、JavaScript 等，能够构建高性能的 Web 应用。',
      technologies: ['CSS', 'React', 'HTML', 'JavaScript', 'Astro', 'SEO']
    },
    {
      title: '深度学习',
      description: '具备专业的深度学习能力，能够从用户角度思考，创造直观易用的界面。',
      technologies: ['PyTorch', 'VeRL', 'LLM']
    },
    {
      title: '田径',
      description: '热爱田径运动，擅长短跑和跨栏。',
      technologies: ['100m', '4*100m']
    },
    {
      title: '烘焙',
      description: '热爱烘焙，擅长制作各种甜点。',
      technologies: ['法式西点', '中式酥点', '盘式甜品']
    }
  ],
  research: [
    {
      title: '可交互视频生成',
      description: '研究如何通过设计提升用户在使用产品时的满意度和效率，探索用户行为模式和设计心理学。',
      link: '#'
    },
    {
      title: '强化学习',
      description: '探索在不同设备和屏幕尺寸下，如何保持最佳的用户体验和视觉一致性。',
      link: '#'
    },
    {
      title: '自动驾驶',
      description: '研究前端代码优化、资源加载优化等技术，提升Web应用的加载速度和运行性能。',
      link: '#'
    }
  ]
}
---

<PersonLayout title={person.name} headings={[]} {person}>
  <div class='grid gap-6 lg:grid-cols-6'>
    <!-- 左侧完整个人信息卡片 -->
    <div class='lg:col-span-4'>
      <div>
        <Card class='p-6'>
          <div class='flex flex-col items-center gap-6 md:flex-row md:items-center lg:flex-col'>
            {/* 头像区域 */}
            <div class='flex-shrink-0'>
              <div class='relative'>
                <img 
                  src={person.avatar} 
                  alt={person.name} 
                  class='h-32 w-32 rounded-full border-4 border-border object-cover'
                  width={128}
                  height={128}
                />
                <div class='absolute -bottom-2 -right-2 size-6 rounded-full border-2 border-background bg-green-500'></div>
              </div>
            </div>
            
            {/* 个人信息 */}
            <div class='flex-1 min-w-0 text-center'>
              <div class='mb-4'>
                <h2 class='mb-2 text-2xl font-bold text-foreground'>{person.name}</h2>
                <p class='text-lg text-muted-foreground'>{person.organization}</p>
                <p class='text-lg text-primary font-semibold'>{person.role}</p>
              </div>
              
              <p class='mb-4 text-lg italic text-muted-foreground'>"{person.slogan}"</p>
              
              <p class='mb-4 text-muted-foreground'>{person.description}</p>
              
              {/* 社交链接 */}
              <div class='flex flex-wrap justify-center gap-2 pb-2'>
                {person.github && (
                  <Button href={person.github} target='_blank' style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="github" class="w-4 h-4" />
                    GitHub
                  </Button>
                )}
                {person.website && (
                  <Button href={person.website} target='_blank' style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="earth" class="w-4 h-4" />
                    个人网站
                  </Button>
                )}
                {person.email && (
                  <Button href={`mailto:${person.email}`} style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="email" class="w-4 h-4" />
                    邮箱联系
                  </Button>
                )}
                {person.bilibili && (
                  <Button href={person.bilibili} target='_blank' style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="bilibili" class="w-4 h-4" />
                    Bilibili
                  </Button>
                )}
                {person.linkedin && (
                  <Button href={person.linkedin} target='_blank' style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="link" class="w-4 h-4" />
                    LinkedIn
                  </Button>
                )}
                {person.twitter && (
                  <Button href={person.twitter} target='_blank' style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="x" class="w-4 h-4" />
                    Twitter
                  </Button>
                )}
              </div>
            </div>
          </div>
        </Card>
      </div>
    </div>

    <!-- 右侧简化内容区域 -->
    <div class='lg:col-span-2'>
      <!-- 研究兴趣卡片 -->
      <Card class='p-6 mb-6'>
        <h2 class='mb-1 text-lg font-semibold text-foreground flex items-center gap-2'>
          <Icon name="research" class="w-5 h-5 text-primary" />
          研究兴趣
        </h2>
        <div class='flex flex-wrap gap-2 pb-2'>
          {person.research.map((item) => (
            <span class='inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary'>
              {item.title}
            </span>
          ))}
        </div>
      </Card>

      <!-- 技能专长卡片 -->
      <Card class='p-6'>
        <h2 class='mb-1 text-lg font-semibold text-foreground flex items-center gap-2'>
          <Icon name="skills" class="w-5 h-5 text-primary" />
          技能专长
        </h2>
        <div class='space-y-4'>
          {person.skills.map((skill, index) => (
            <div class='pt-2 pb-3 border-b border-border last:border-b-0 last:pb-0'>
              <h3 class='mb-2 text-sm font-semibold text-foreground'>{skill.title}</h3>
              <div class='flex flex-wrap gap-1'>
                {skill.technologies.map((tech) => (
                  <span class='inline-flex items-center rounded-full bg-primary/10 px-2 py-1 text-xs font-medium text-primary'>
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
        <div class='pt-2'></div>
      </Card>
    </div>
  </div>
</PersonLayout> 