---
import { Button, Card } from 'astro-pure/user'
import PersonLayout from '@/layouts/PersonLayout.astro'
import Icon from '@/components/custom/Icon.astro'

const headings: { depth: number; slug: string; text: string }[] = []

const person = {
  name: 'Violet（刘伊天）',
  avatar: 'https://avatars.githubusercontent.com/u/113980234?v=4',
  organization: 'SJTU ScaleLab',
  role: '社区运营团队负责人',
  slogan: '我也是个人',
  tags: ['社区运营', '项目管理', '团队协作', '活动策划', '内容运营'],
  description: '负责社区运营和项目管理，致力于构建活跃的开发者社区。擅长组织技术交流活动，促进社区成员之间的合作与成长。',
  github: 'https://github.com/VioletEvar',
  email: 'violet@sjtu.edu.cn',
  linkedin: 'https://www.linkedin.com/in/violet-liu',
  management: [
    {
      title: '社区运营管理',
      description: '负责 VapourX 社区的日常运营工作，包括成员管理、内容策划、活动组织等。',
      responsibilities: ['成员招募', '内容策划', '活动组织', '社区维护']
    },
    {
      title: '项目管理',
      description: '协调社区项目的开发进度，确保项目按时高质量完成。',
      responsibilities: ['进度跟踪', '资源协调', '质量把控', '风险管控']
    },
    {
      title: '团队协作',
      description: '促进团队成员之间的有效沟通和协作，营造良好的工作氛围。',
      responsibilities: ['沟通协调', '团队建设', '冲突解决', '文化建设']
    }
  ],
  activities: [
    {
      name: 'VapourX 技术分享会',
      description: '定期组织社区技术分享活动，邀请行业专家和社区成员分享最新技术动态。',
      participants: '50+ 参与者',
      frequency: '每月一次',
      link: '#'
    },
    {
      name: '开源项目协作',
      description: '组织社区成员参与开源项目开发，提升技术能力和团队协作能力。',
      participants: '20+ 贡献者',
      frequency: '持续进行',
      link: 'https://github.com/VapourX-ScaleLab'
    },
    {
      name: '新人引导计划',
      description: '为新加入社区的成员提供引导和培训，帮助他们快速融入社区。',
      participants: '30+ 新人',
      frequency: '按需开展',
      link: '#'
    }
  ],
  achievements: [
    {
      title: '社区活跃度提升',
      description: '通过有效的运营策略，将社区活跃度提升了 200%，成员参与度显著提高。',
      year: '2024'
    },
    {
      title: '优秀社区管理者',
      description: '获得学校颁发的优秀社区管理者称号，表彰在社区建设方面的突出贡献。',
      year: '2023'
    },
    {
      title: '技术活动组织奖',
      description: '因成功组织多次技术交流活动，获得技术活动组织奖。',
      year: '2023'
    }
  ]
}
---

<PersonLayout title={person.name} {headings} {person}>
  <div class='grid gap-6 lg:grid-cols-6'>
    <!-- 左侧完整个人信息卡片 -->
    <div class='lg:col-span-4'>
      <div>
        <Card class='p-6'>
          <div class='flex flex-col items-center gap-6 md:flex-row md:items-center lg:flex-col'>
            {/* 头像区域 */}
            <div class='flex-shrink-0'>
              <div class='relative'>
                <img 
                  src={person.avatar} 
                  alt={person.name} 
                  class='h-32 w-32 rounded-full border-4 border-border object-cover'
                  width={128}
                  height={128}
                />
                <div class='absolute -bottom-2 -right-2 size-6 rounded-full border-2 border-background bg-green-500'></div>
              </div>
            </div>
            
            {/* 个人信息 */}
            <div class='flex-1 min-w-0 text-center'>
              <div class='mb-4'>
                <h2 class='mb-2 text-2xl font-bold text-foreground'>{person.name}</h2>
                <p class='text-lg text-muted-foreground'>{person.organization}</p>
                <p class='text-lg text-primary font-semibold'>{person.role}</p>
              </div>
              
              <p class='mb-4 text-lg italic text-muted-foreground'>"{person.slogan}"</p>
              
              <p class='mb-4 text-muted-foreground'>{person.description}</p>
              
              {/* 社交链接 */}
              <div class='flex flex-wrap justify-center gap-2 pb-2'>
                {person.github && (
                  <Button href={person.github} target='_blank' style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="github" class="w-4 h-4" />
                    GitHub
                  </Button>
                )}
                {person.email && (
                  <Button href={`mailto:${person.email}`} style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="email" class="w-4 h-4" />
                    邮箱联系
                  </Button>
                )}
                {person.linkedin && (
                  <Button href={person.linkedin} target='_blank' style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="link" class="w-4 h-4" />
                    LinkedIn
                  </Button>
                )}
              </div>
            </div>
          </div>
        </Card>
      </div>
    </div>

    <!-- 右侧内容区域 -->
    <div class='lg:col-span-2'>
      <!-- 管理经验卡片 -->
      <Card class='p-6 mb-6'>
        <h2 class='mb-1 text-lg font-semibold text-foreground'>管理经验</h2>
        <div class='space-y-4'>
          {person.management.map((item) => (
            <div class='pt-2 pb-3 border-b border-border last:border-b-0 last:pb-0'>
              <h3 class='mb-2 text-sm font-semibold text-foreground'>{item.title}</h3>
              <p class='mb-2 text-sm text-muted-foreground'>{item.description}</p>
              <div class='flex flex-wrap gap-1'>
                {item.responsibilities.map((resp) => (
                  <span class='inline-flex items-center rounded-full bg-primary/10 px-2 py-1 text-xs font-medium text-primary'>
                    {resp}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </Card>

      <!-- 活动策划卡片 -->
      <Card class='p-6 mb-6'>
        <h2 class='mb-1 text-lg font-semibold text-foreground'>活动策划</h2>
        <div class='space-y-4'>
          {person.activities.map((activity) => (
            <div class='pt-2 pb-3 border-b border-border last:border-b-0 last:pb-0'>
              <div class='flex items-start justify-between gap-3'>
                <div class='flex-1'>
                  <h3 class='mb-1 text-sm font-semibold text-foreground'>{activity.name}</h3>
                  <p class='mb-2 text-sm text-muted-foreground'>{activity.description}</p>
                  <div class='flex flex-wrap gap-3 text-xs text-muted-foreground'>
                    <span>参与者: {activity.participants}</span>
                    <span>频率: {activity.frequency}</span>
                  </div>
                </div>
                {activity.link && (
                  <Button href={activity.link} target='_blank' style='outline' class='flex-shrink-0 text-xs'>
                    了解更多
                  </Button>
                )}
              </div>
            </div>
          ))}
        </div>
      </Card>

      <!-- 成就荣誉卡片 -->
      <Card class='p-6'>
        <h2 class='mb-1 text-lg font-semibold text-foreground'>成就荣誉</h2>
        <div class='space-y-3'>
          {person.achievements.map((achievement) => (
            <div class='pt-2 pb-3 border-b border-border last:border-b-0 last:pb-0'>
              <div class='flex flex-col gap-1 md:flex-row md:items-start md:justify-between'>
                <div class='flex-1'>
                  <h3 class='text-sm font-semibold text-foreground'>{achievement.title}</h3>
                  <p class='text-xs text-muted-foreground'>{achievement.description}</p>
                </div>
                <span class='text-xs text-muted-foreground'>{achievement.year}</span>
              </div>
            </div>
          ))}
        </div>
      </Card>
    </div>
  </div>
</PersonLayout> 