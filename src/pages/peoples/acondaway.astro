---
import { Button, Card } from 'astro-pure/user'
import PersonLayout from '@/layouts/PersonLayout.astro'

const headings = [
  { depth: 2, slug: 'research', text: '研究方向' },
  { depth: 2, slug: 'projects', text: '项目经历' },
  { depth: 2, slug: 'publications', text: '学术成果' }
]

const person = {
  name: 'ACondawayUNo（徐聪晟）',
  avatar: 'https://avatars.githubusercontent.com/u/115391544?v=4',
  organization: 'SJTU ScaleLab',
  role: '社区创始人',
  slogan: '人机合一，化具象为抽象。',
  tags: ['具身智能', '人机交互', '计算机视觉', '深度学习', '机器人学'],
  description: '专注于具身智能研究，致力于推动人机交互技术的发展。在计算机视觉和深度学习领域有丰富经验，正在探索如何让机器更好地理解和适应人类世界。',
  github: 'https://github.com/ACondawayUNo',
  website: 'https://acondaway.github.io/',
  email: 'acondaway@sjtu.edu.cn',
  linkedin: 'https://www.linkedin.com/in/acondaway',
  research: [
    {
      title: '具身智能感知与交互',
      description: '研究机器人在复杂环境中的感知能力，包括视觉、触觉等多模态信息的融合处理。',
      link: '#'
    },
    {
      title: '人机协作系统',
      description: '探索人类与机器人协作的新模式，提高协作效率和安全性。',
      link: '#'
    },
    {
      title: '计算机视觉算法',
      description: '开发高效的计算机视觉算法，用于目标检测、跟踪和场景理解。',
      link: '#'
    }
  ],
  projects: [
    {
      name: 'VapourX 社区平台',
      description: '构建具身智能研究者的交流平台，促进学术交流和项目合作。',
      link: 'https://github.com/VapourX-ScaleLab',
      tech: ['Astro', 'TypeScript', 'Tailwind CSS', 'GitHub API']
    },
    {
      name: '智能机器人控制系统',
      description: '基于深度学习的机器人控制系统，实现复杂任务的自主执行。',
      link: '#',
      tech: ['Python', 'ROS', 'PyTorch', 'OpenCV']
    },
    {
      name: '多模态感知系统',
      description: '集成视觉、触觉等多种传感器的感知系统，提升机器人环境理解能力。',
      link: '#',
      tech: ['C++', 'TensorFlow', 'CUDA', '传感器融合']
    }
  ],
  publications: [
    {
      title: 'Embodied Intelligence: From Research to Reality',
      authors: 'Xu, C., et al.',
      venue: 'IEEE Robotics and Automation Letters',
      year: '2024',
      link: '#'
    },
    {
      title: 'Multi-Modal Human-Robot Interaction System',
      authors: 'Xu, C., et al.',
      venue: 'International Conference on Robotics and Automation',
      year: '2023',
      link: '#'
    },
    {
      title: 'Computer Vision for Robotic Manipulation',
      authors: 'Xu, C., et al.',
      venue: 'Computer Vision and Pattern Recognition',
      year: '2023',
      link: '#'
    }
  ]
}
---

<PersonLayout title={person.name} {headings} {person}>
  <!-- 研究方向 -->
  <section id='research' class='scroll-mt-20'>
    <h2 class='mb-6 text-2xl font-semibold text-foreground'>研究方向</h2>
    <div class='grid gap-4 md:grid-cols-2'>
      {person.research.map((item) => (
        <Card class='p-4'>
          <h3 class='mb-2 text-lg font-semibold text-foreground'>{item.title}</h3>
          <p class='text-muted-foreground'>{item.description}</p>
          {item.link && (
            <Button href={item.link} style='primary' class='mt-3 text-sm'>
              了解更多
            </Button>
          )}
        </Card>
      ))}
    </div>
  </section>

  <!-- 项目经历 -->
  <section id='projects' class='scroll-mt-20'>
    <h2 class='mb-6 text-2xl font-semibold text-foreground'>项目经历</h2>
    <div class='space-y-4'>
      {person.projects.map((project) => (
        <Card class='p-6'>
          <div class='flex flex-col gap-4 md:flex-row md:items-start'>
            <div class='flex-1'>
              <h3 class='mb-2 text-lg font-semibold text-foreground'>{project.name}</h3>
              <p class='mb-3 text-muted-foreground'>{project.description}</p>
              <div class='flex flex-wrap gap-1'>
                {project.tech.map((tech) => (
                  <span class='inline-flex items-center rounded-full bg-muted px-2 py-1 text-xs font-medium text-muted-foreground'>
                    {tech}
                  </span>
                ))}
              </div>
            </div>
            {project.link && (
              <Button href={project.link} target='_blank' style='outline' class='flex-shrink-0'>
                查看项目
              </Button>
            )}
          </div>
        </Card>
      ))}
    </div>
  </section>

  <!-- 学术成果 -->
  <section id='publications' class='scroll-mt-20'>
    <h2 class='mb-6 text-2xl font-semibold text-foreground'>学术成果</h2>
    <div class='space-y-4'>
      {person.publications.map((pub) => (
        <Card class='p-4'>
          <div class='flex flex-col gap-2 md:flex-row md:items-start md:justify-between'>
            <div class='flex-1'>
              <h3 class='mb-1 text-lg font-semibold text-foreground'>{pub.title}</h3>
              <p class='text-sm text-muted-foreground'>{pub.authors}</p>
              <p class='text-sm text-muted-foreground'>{pub.venue}, {pub.year}</p>
            </div>
            {pub.link && (
              <Button href={pub.link} target='_blank' style='outline' class='flex-shrink-0 text-sm'>
                查看论文
              </Button>
            )}
          </div>
        </Card>
      ))}
    </div>
  </section>
</PersonLayout> 