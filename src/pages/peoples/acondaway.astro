---
import { Button, Card } from 'astro-pure/user'
import PersonLayout from '@/layouts/PersonLayout.astro'
import Icon from '@/components/custom/Icon.astro'

const headings: { depth: number; slug: string; text: string }[] = []

const person = {
  name: 'ACondawayUNo（徐聪晟）',
  avatar: 'https://avatars.githubusercontent.com/u/115391544?v=4',
  organization: 'SJTU ScaleLab',
  role: '社区创始人',
  slogan: '人机合一，化具象为抽象。',
  tags: ['具身智能', '人机交互', '计算机视觉', '深度学习', '机器人学'],
  description: '专注于具身智能研究，致力于推动人机交互技术的发展。在计算机视觉和深度学习领域有丰富经验，正在探索如何让机器更好地理解和适应人类世界。',
  github: 'https://github.com/ACondawayUNo',
  website: 'https://acondaway.github.io/',
  email: 'acondaway@sjtu.edu.cn',
  linkedin: 'https://www.linkedin.com/in/acondaway',
  research: [
    {
      title: '具身智能感知与交互',
      description: '研究机器人在复杂环境中的感知能力，包括视觉、触觉等多模态信息的融合处理。',
      link: '#'
    },
    {
      title: '人机协作系统',
      description: '探索人类与机器人协作的新模式，提高协作效率和安全性。',
      link: '#'
    },
    {
      title: '计算机视觉算法',
      description: '开发高效的计算机视觉算法，用于目标检测、跟踪和场景理解。',
      link: '#'
    }
  ],
  projects: [
    {
      name: 'VapourX 社区平台',
      description: '构建具身智能研究者的交流平台，促进学术交流和项目合作。',
      link: 'https://github.com/VapourX-ScaleLab',
      tech: ['Astro', 'TypeScript', 'Tailwind CSS', 'GitHub API']
    },
    {
      name: '智能机器人控制系统',
      description: '基于深度学习的机器人控制系统，实现复杂任务的自主执行。',
      link: '#',
      tech: ['Python', 'ROS', 'PyTorch', 'OpenCV']
    },
    {
      name: '多模态感知系统',
      description: '集成视觉、触觉等多种传感器的感知系统，提升机器人环境理解能力。',
      link: '#',
      tech: ['C++', 'TensorFlow', 'CUDA', '传感器融合']
    }
  ],
  publications: [
    {
      title: 'Embodied Intelligence: From Research to Reality',
      authors: 'Xu, C., et al.',
      venue: 'IEEE Robotics and Automation Letters',
      year: '2024',
      link: '#'
    },
    {
      title: 'Multi-Modal Human-Robot Interaction System',
      authors: 'Xu, C., et al.',
      venue: 'International Conference on Robotics and Automation',
      year: '2023',
      link: '#'
    },
    {
      title: 'Computer Vision for Robotic Manipulation',
      authors: 'Xu, C., et al.',
      venue: 'Computer Vision and Pattern Recognition',
      year: '2023',
      link: '#'
    }
  ]
}
---

<PersonLayout title={person.name} {headings} {person}>
  <div class='grid gap-6 lg:grid-cols-6'>
    <!-- 左侧完整个人信息卡片 -->
    <div class='lg:col-span-4'>
      <div>
        <Card class='p-6'>
          <div class='flex flex-col items-center gap-6 md:flex-row md:items-center lg:flex-col'>
            {/* 头像区域 */}
            <div class='flex-shrink-0'>
              <div class='relative'>
                <img 
                  src={person.avatar} 
                  alt={person.name} 
                  class='h-32 w-32 rounded-full border-4 border-border object-cover'
                  width={128}
                  height={128}
                />
                <div class='absolute -bottom-2 -right-2 size-6 rounded-full border-2 border-background bg-green-500'></div>
              </div>
            </div>
            
            {/* 个人信息 */}
            <div class='flex-1 min-w-0 text-center'>
              <div class='mb-4'>
                <h2 class='mb-2 text-2xl font-bold text-foreground'>{person.name}</h2>
                <p class='text-lg text-muted-foreground'>{person.organization}</p>
                <p class='text-lg text-primary font-semibold'>{person.role}</p>
              </div>
              
              <p class='mb-4 text-lg italic text-muted-foreground'>"{person.slogan}"</p>
              
              <p class='mb-4 text-muted-foreground'>{person.description}</p>
              
              {/* 社交链接 */}
              <div class='flex flex-wrap justify-center gap-2 pb-2'>
                {person.github && (
                  <Button href={person.github} target='_blank' style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="github" class="w-4 h-4" />
                    GitHub
                  </Button>
                )}
                {person.website && (
                  <Button href={person.website} target='_blank' style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="earth" class="w-4 h-4" />
                    个人网站
                  </Button>
                )}
                {person.email && (
                  <Button href={`mailto:${person.email}`} style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="email" class="w-4 h-4" />
                    邮箱联系
                  </Button>
                )}
                {person.linkedin && (
                  <Button href={person.linkedin} target='_blank' style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="link" class="w-4 h-4" />
                    LinkedIn
                  </Button>
                )}
              </div>
            </div>
          </div>
        </Card>
      </div>
    </div>

    <!-- 右侧内容区域 -->
    <div class='lg:col-span-2'>
      <!-- 研究方向卡片 -->
      <Card class='p-6 mb-6'>
        <h2 class='mb-1 text-lg font-semibold text-foreground flex items-center gap-2'>
          <Icon name="research" class="w-5 h-5 text-primary" />
          研究方向
        </h2>
        <div class='flex flex-wrap gap-2 pb-2'>
          {person.research.map((item) => (
            <span class='inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary'>
              {item.title}
            </span>
          ))}
        </div>
      </Card>

      <!-- 项目经历卡片 -->
      <Card class='p-6 mb-6'>
        <h2 class='mb-1 text-lg font-semibold text-foreground'>项目经历</h2>
        <div class='space-y-4'>
          {person.projects.map((project) => (
            <div class='pt-2 pb-3 border-b border-border last:border-b-0 last:pb-0'>
              <div class='flex items-start justify-between gap-3'>
                <div class='flex-1'>
                  <h3 class='mb-1 text-sm font-semibold text-foreground'>{project.name}</h3>
                  <p class='mb-2 text-sm text-muted-foreground'>{project.description}</p>
                  <div class='flex flex-wrap gap-1'>
                    {project.tech.map((tech) => (
                      <span class='inline-flex items-center rounded-full bg-muted px-2 py-1 text-xs font-medium text-muted-foreground'>
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>
                {project.link && (
                  <Button href={project.link} target='_blank' style='outline' class='flex-shrink-0 text-xs'>
                    查看项目
                  </Button>
                )}
              </div>
            </div>
          ))}
        </div>
      </Card>

      <!-- 学术成果卡片 -->
      <Card class='p-6'>
        <h2 class='mb-1 text-lg font-semibold text-foreground'>学术成果</h2>
        <div class='space-y-3'>
          {person.publications.map((pub) => (
            <div class='pt-2 pb-3 border-b border-border last:border-b-0 last:pb-0'>
              <div class='flex flex-col gap-1 md:flex-row md:items-start md:justify-between'>
                <div class='flex-1'>
                  <h3 class='text-sm font-semibold text-foreground'>{pub.title}</h3>
                  <p class='text-xs text-muted-foreground'>{pub.authors}</p>
                  <p class='text-xs text-muted-foreground'>{pub.venue}, {pub.year}</p>
                </div>
                {pub.link && (
                  <Button href={pub.link} target='_blank' style='outline' class='flex-shrink-0 text-xs'>
                    查看论文
                  </Button>
                )}
              </div>
            </div>
          ))}
        </div>
      </Card>
    </div>
  </div>
</PersonLayout> 