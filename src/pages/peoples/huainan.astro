---
import { Button, Card } from 'astro-pure/user'
import PersonLayout from '@/layouts/PersonLayout.astro'
import Icon from '@/components/custom/Icon.astro'

const headings: { depth: number; slug: string; text: string }[] = []

const person = {
  name: 'HuaiNan（帅哲）',
  avatar: 'https://avatars.githubusercontent.com/u/165187020?v=4',
  organization: 'SJTU DS',
  role: '社区视觉传达总设计师',
  slogan: '我也是个人',
  tags: ['视觉设计', '品牌设计', 'UI设计', '创意设计', '插画设计'],
  description: '专注于视觉传达设计，负责社区品牌形象和视觉设计工作。擅长将抽象概念转化为直观的视觉表达，为社区打造独特的视觉识别系统。',
  github: 'https://github.com/HuaiNanPror',
  website: 'https://huainan.design',
  email: 'huainan@sjtu.edu.cn',
  behance: 'https://www.behance.net/huainan',
  dribbble: 'https://dribbble.com/huainan',
  designSkills: [
    {
      title: '品牌设计',
      description: '擅长品牌视觉识别系统设计，包括 Logo 设计、VI 手册、品牌应用等。',
      tools: ['Adobe Illustrator', 'Adobe Photoshop', 'Figma', '品牌策略']
    },
    {
      title: 'UI/UX 设计',
      description: '专注于用户界面和用户体验设计，注重可用性和美观性的平衡。',
      tools: ['Figma', 'Sketch', 'Adobe XD', '用户研究', '原型设计']
    },
    {
      title: '插画设计',
      description: '具备独特的插画风格，能够为项目增添艺术感和个性化表达。',
      tools: ['Procreate', 'Adobe Illustrator', '手绘', '数字绘画']
    }
  ],
  portfolio: [
    {
      name: 'VapourX 品牌设计',
      description: '为 VapourX 社区设计完整的品牌视觉识别系统，包括 Logo、色彩规范、应用场景等。',
      link: 'https://vapourx.org',
      category: '品牌设计',
      year: '2024'
    },
    {
      name: '社区官网 UI 设计',
      description: '设计社区官方网站的用户界面，采用现代化的设计语言和良好的用户体验。',
      link: 'https://vapourx.org',
      category: 'UI设计',
      year: '2024'
    },
    {
      name: '技术插画系列',
      description: '创作了一系列关于具身智能的技术插画，用于社区宣传和科普教育。',
      link: '#',
      category: '插画设计',
      year: '2023'
    }
  ],
  awards: [
    {
      title: '优秀设计奖',
      description: '因 VapourX 品牌设计项目获得学校优秀设计奖，表彰在视觉传达设计方面的突出表现。',
      year: '2024',
      organization: 'SJTU 设计学院'
    },
    {
      title: 'UI 设计竞赛一等奖',
      description: '在校园 UI 设计竞赛中获得一等奖，作品展现了优秀的用户体验设计能力。',
      year: '2023',
      organization: 'SJTU 设计竞赛'
    },
    {
      title: '创意设计奖',
      description: '因独特的创意设计理念和优秀的执行能力获得创意设计奖。',
      year: '2023',
      organization: '设计协会'
    }
  ]
}
---

<PersonLayout title={person.name} {headings} {person}>
  <div class='grid gap-6 lg:grid-cols-6'>
    <!-- 左侧完整个人信息卡片 -->
    <div class='lg:col-span-4'>
      <div>
        <Card class='p-6'>
          <div class='flex flex-col items-center gap-6 md:flex-row md:items-center lg:flex-col'>
            {/* 头像区域 */}
            <div class='flex-shrink-0'>
              <div class='relative'>
                <img 
                  src={person.avatar} 
                  alt={person.name} 
                  class='h-32 w-32 rounded-full border-4 border-border object-cover'
                  width={128}
                  height={128}
                />
                <div class='absolute -bottom-2 -right-2 size-6 rounded-full border-2 border-background bg-green-500'></div>
              </div>
            </div>
            
            {/* 个人信息 */}
            <div class='flex-1 min-w-0 text-center'>
              <div class='mb-4'>
                <h2 class='mb-2 text-2xl font-bold text-foreground'>{person.name}</h2>
                <p class='text-lg text-muted-foreground'>{person.organization}</p>
                <p class='text-lg text-primary font-semibold'>{person.role}</p>
              </div>
              
              <p class='mb-4 text-lg italic text-muted-foreground'>"{person.slogan}"</p>
              
              <p class='mb-4 text-muted-foreground'>{person.description}</p>
              
              {/* 社交链接 */}
              <div class='flex flex-wrap justify-center gap-2 pb-2'>
                {person.github && (
                  <Button href={person.github} target='_blank' style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="github" class="w-4 h-4" />
                    GitHub
                  </Button>
                )}
                {person.website && (
                  <Button href={person.website} target='_blank' style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="earth" class="w-4 h-4" />
                    个人网站
                  </Button>
                )}
                {person.email && (
                  <Button href={`mailto:${person.email}`} style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="email" class="w-4 h-4" />
                    邮箱联系
                  </Button>
                )}
                {person.behance && (
                  <Button href={person.behance} target='_blank' style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="link" class="w-4 h-4" />
                    Behance
                  </Button>
                )}
                {person.dribbble && (
                  <Button href={person.dribbble} target='_blank' style='outline' class='inline-flex items-center gap-1 text-sm'>
                    <Icon name="link" class="w-4 h-4" />
                    Dribbble
                  </Button>
                )}
              </div>
            </div>
          </div>
        </Card>
      </div>
    </div>

    <!-- 右侧内容区域 -->
    <div class='lg:col-span-2'>
      <!-- 设计技能卡片 -->
      <Card class='p-6 mb-6'>
        <h2 class='mb-1 text-lg font-semibold text-foreground flex items-center gap-2'>
          <Icon name="skills" class="w-5 h-5 text-primary" />
          设计技能
        </h2>
        <div class='space-y-4'>
          {person.designSkills.map((skill) => (
            <div class='pt-2 pb-3 border-b border-border last:border-b-0 last:pb-0'>
              <h3 class='mb-2 text-sm font-semibold text-foreground'>{skill.title}</h3>
              <div class='flex flex-wrap gap-1'>
                {skill.tools.map((tool) => (
                  <span class='inline-flex items-center rounded-full bg-primary/10 px-2 py-1 text-xs font-medium text-primary'>
                    {tool}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </Card>

      <!-- 作品集卡片 -->
      <Card class='p-6 mb-6'>
        <h2 class='mb-1 text-lg font-semibold text-foreground'>作品集</h2>
        <div class='space-y-4'>
          {person.portfolio.map((work) => (
            <div class='pt-2 pb-3 border-b border-border last:border-b-0 last:pb-0'>
              <div class='flex items-start justify-between gap-3'>
                <div class='flex-1'>
                  <div class='mb-1 flex items-center gap-2'>
                    <h3 class='text-sm font-semibold text-foreground'>{work.name}</h3>
                    <span class='text-xs text-muted-foreground'>{work.year}</span>
                  </div>
                  <p class='mb-2 text-sm text-muted-foreground'>{work.description}</p>
                  <span class='inline-flex items-center rounded-full bg-muted px-2 py-1 text-xs font-medium text-muted-foreground'>{work.category}</span>
                </div>
                {work.link && (
                  <Button href={work.link} target='_blank' style='outline' class='flex-shrink-0 text-xs'>
                    查看作品
                  </Button>
                )}
              </div>
            </div>
          ))}
        </div>
      </Card>

      <!-- 获奖经历卡片 -->
      <Card class='p-6'>
        <h2 class='mb-1 text-lg font-semibold text-foreground'>获奖经历</h2>
        <div class='space-y-3'>
          {person.awards.map((award) => (
            <div class='pt-2 pb-3 border-b border-border last:border-b-0 last:pb-0'>
              <div class='flex flex-col gap-1 md:flex-row md:items-start md:justify-between'>
                <div class='flex-1'>
                  <h3 class='text-sm font-semibold text-foreground'>{award.title}</h3>
                  <p class='text-xs text-muted-foreground'>{award.description}</p>
                  <p class='text-xs text-muted-foreground'>{award.organization}</p>
                </div>
                <span class='text-xs text-muted-foreground'>{award.year}</span>
              </div>
            </div>
          ))}
        </div>
      </Card>
    </div>
  </div>
</PersonLayout> 