---
import { Button, Card } from 'astro-pure/user'
import PersonLayout from '@/layouts/PersonLayout.astro'

const headings = [
  { depth: 2, slug: 'design-skills', text: '设计技能' },
  { depth: 2, slug: 'portfolio', text: '作品集' },
  { depth: 2, slug: 'awards', text: '获奖经历' }
]

const person = {
  name: 'HuaiNan（帅哲）',
  avatar: 'https://avatars.githubusercontent.com/u/165187020?v=4',
  organization: 'SJTU DS',
  role: '社区视觉传达总设计师',
  slogan: '我也是个人',
  tags: ['视觉设计', '品牌设计', 'UI设计', '创意设计', '插画设计'],
  description: '专注于视觉传达设计，负责社区品牌形象和视觉设计工作。擅长将抽象概念转化为直观的视觉表达，为社区打造独特的视觉识别系统。',
  github: 'https://github.com/HuaiNanPror',
  website: 'https://huainan.design',
  email: 'huainan@sjtu.edu.cn',
  behance: 'https://www.behance.net/huainan',
  dribbble: 'https://dribbble.com/huainan',
  designSkills: [
    {
      title: '品牌设计',
      description: '擅长品牌视觉识别系统设计，包括 Logo 设计、VI 手册、品牌应用等。',
      tools: ['Adobe Illustrator', 'Adobe Photoshop', 'Figma', '品牌策略']
    },
    {
      title: 'UI/UX 设计',
      description: '专注于用户界面和用户体验设计，注重可用性和美观性的平衡。',
      tools: ['Figma', 'Sketch', 'Adobe XD', '用户研究', '原型设计']
    },
    {
      title: '插画设计',
      description: '具备独特的插画风格，能够为项目增添艺术感和个性化表达。',
      tools: ['Procreate', 'Adobe Illustrator', '手绘', '数字绘画']
    }
  ],
  portfolio: [
    {
      name: 'VapourX 品牌设计',
      description: '为 VapourX 社区设计完整的品牌视觉识别系统，包括 Logo、色彩规范、应用场景等。',
      link: 'https://vapourx.org',
      category: '品牌设计',
      year: '2024'
    },
    {
      name: '社区官网 UI 设计',
      description: '设计社区官方网站的用户界面，采用现代化的设计语言和良好的用户体验。',
      link: 'https://vapourx.org',
      category: 'UI设计',
      year: '2024'
    },
    {
      name: '技术插画系列',
      description: '创作了一系列关于具身智能的技术插画，用于社区宣传和科普教育。',
      link: '#',
      category: '插画设计',
      year: '2023'
    }
  ],
  awards: [
    {
      title: '优秀设计奖',
      description: '因 VapourX 品牌设计项目获得学校优秀设计奖，表彰在视觉传达设计方面的突出表现。',
      year: '2024',
      organization: 'SJTU 设计学院'
    },
    {
      title: 'UI 设计竞赛一等奖',
      description: '在校园 UI 设计竞赛中获得一等奖，作品展现了优秀的用户体验设计能力。',
      year: '2023',
      organization: 'SJTU 设计竞赛'
    },
    {
      title: '创意设计奖',
      description: '因独特的创意设计理念和优秀的执行能力获得创意设计奖。',
      year: '2023',
      organization: '设计协会'
    }
  ]
}
---

<PersonLayout title={person.name} {headings} {person}>
  <!-- 设计技能 -->
  <section id='design-skills' class='scroll-mt-20'>
    <h2 class='mb-6 text-2xl font-semibold text-foreground'>设计技能</h2>
    <div class='grid gap-4 md:grid-cols-2'>
      {person.designSkills.map((skill) => (
        <Card class='p-4'>
          <h3 class='mb-2 text-lg font-semibold text-foreground'>{skill.title}</h3>
          <p class='mb-3 text-muted-foreground'>{skill.description}</p>
          <div class='flex flex-wrap gap-1'>
            {skill.tools.map((tool) => (
              <span class='inline-flex items-center rounded-full bg-primary/10 px-2 py-1 text-xs font-medium text-primary'>
                {tool}
              </span>
            ))}
          </div>
        </Card>
      ))}
    </div>
  </section>

  <!-- 作品集 -->
  <section id='portfolio' class='scroll-mt-20'>
    <h2 class='mb-6 text-2xl font-semibold text-foreground'>作品集</h2>
    <div class='space-y-4'>
      {person.portfolio.map((work) => (
        <Card class='p-6'>
          <div class='flex flex-col gap-4 md:flex-row md:items-start'>
            <div class='flex-1'>
              <div class='mb-2 flex items-center gap-2'>
                <h3 class='text-lg font-semibold text-foreground'>{work.name}</h3>
                <span class='text-sm text-muted-foreground'>{work.year}</span>
              </div>
              <p class='mb-3 text-muted-foreground'>{work.description}</p>
              <div class='flex items-center gap-2'>
                <span class='inline-flex items-center rounded-full bg-muted px-2 py-1 text-xs font-medium text-muted-foreground'>
                  {work.category}
                </span>
              </div>
            </div>
            {work.link && (
              <Button href={work.link} target='_blank' style='outline' class='flex-shrink-0'>
                查看作品
              </Button>
            )}
          </div>
        </Card>
      ))}
    </div>
  </section>

  <!-- 获奖经历 -->
  <section id='awards' class='scroll-mt-20'>
    <h2 class='mb-6 text-2xl font-semibold text-foreground'>获奖经历</h2>
    <div class='space-y-4'>
      {person.awards.map((award) => (
        <Card class='p-4'>
          <div class='flex flex-col gap-2 md:flex-row md:items-start md:justify-between'>
            <div class='flex-1'>
              <h3 class='text-lg font-semibold text-foreground'>{award.title}</h3>
              <p class='mt-1 text-muted-foreground'>{award.description}</p>
              <p class='mt-1 text-sm text-muted-foreground'>{award.organization}</p>
            </div>
            <span class='text-sm text-muted-foreground'>{award.year}</span>
          </div>
        </Card>
      ))}
    </div>
  </section>
</PersonLayout> 