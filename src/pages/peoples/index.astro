---
import { Image } from 'astro:assets'
import { Button } from 'astro-pure/user'
import PageLayout from '@/layouts/CommonPage.astro'
import avatar from '@/assets/vapourx-logo-trans.png'

const headings = [
  { depth: 2, slug: 'core-members', text: '核心成员' },
  { depth: 2, slug: 'community-members', text: '社区成员' }
]

const members = [
  {
    id: 'acondaway',
    name: 'ACondawayUNo（徐聪晟）',
    avatar: 'https://avatars.githubusercontent.com/u/115391544?v=4',
    organization: 'SJTU ScaleLab',
    role: '社区创始人',
    slogan: '人机合一，化具象为抽象。',
    href: '/peoples/acondaway',
    tags: ['具身智能', '人机交互', '计算机视觉', '深度学习'],
    description: '专注于具身智能研究，致力于推动人机交互技术的发展。在计算机视觉和深度学习领域有丰富经验。'
  },
  {
    id: 'andreo',
    name: 'Andreo（杨锦畅）',
    avatar: 'https://avatars.githubusercontent.com/u/33977087?v=4',
    organization: 'SJTU',
    role: '社区网页设计师',
    slogan: '我是关羽',
    href: '/peoples/andreo',
    tags: ['前端开发', 'UI/UX设计', 'Web技术', '用户体验'],
    description: '专注于前端开发和用户体验设计，致力于创造美观且实用的Web界面。'
  },
  {
    id: 'violet',
    name: 'Violet（刘伊天）',
    avatar: 'https://avatars.githubusercontent.com/u/113980234?v=4',
    organization: 'SJTU ScaleLab',
    role: '社区运营团队负责人',
    slogan: '我也是个人',
    href: '/peoples/violet',
    tags: ['社区运营', '项目管理', '团队协作', '活动策划'],
    description: '负责社区运营和项目管理，致力于构建活跃的开发者社区。'
  },
  {
    id: 'huainan',
    name: 'HuaiNan（帅哲）',
    avatar: 'https://avatars.githubusercontent.com/u/165187020?v=4',
    organization: 'SJTU DS',
    role: '社区视觉传达总设计师',
    slogan: '我也是个人',
    href: '/peoples/huainan',
    tags: ['视觉设计', '品牌设计', 'UI设计', '创意设计'],
    description: '专注于视觉传达设计，负责社区品牌形象和视觉设计工作。'
  }
]
---

<PageLayout title='社区成员' {headings} info='/peoples'>
  <div class='mx-auto max-w-4xl'>
    <!-- 页面标题 -->
    <div class='mb-8 text-center'>
      <h1 class='mb-4 text-4xl font-bold text-foreground'>社区成员</h1>
      <p class='text-lg text-muted-foreground'>
        认识 VapourX 社区的优秀成员，了解他们的专业领域和贡献
      </p>
    </div>

    <!-- 核心成员 -->
    <section id='core-members' class='mb-12 scroll-mt-20'>
      <h2 class='mb-6 text-2xl font-semibold text-foreground'>核心成员</h2>
      <div class='grid gap-6 md:grid-cols-2'>
        {members.slice(0, 4).map((member) => (
          <div class='group rounded-lg border p-6 transition-all hover:shadow-lg'>
            <div class='flex items-start gap-4'>
              {/* 头像 */}
              <div class='flex-shrink-0'>
                <div class='relative'>
                  <img 
                    src={member.avatar} 
                    alt={member.name} 
                    class='h-16 w-16 rounded-full border-2 border-border object-cover'
                    width={64}
                    height={64}
                  />
                  <div class='absolute -bottom-1 -right-1 size-4 rounded-full border-2 border-background bg-green-500'></div>
                </div>
              </div>
              
              {/* 成员信息 */}
              <div class='flex-1 min-w-0'>
                <div class='mb-2'>
                  <h3 class='text-lg font-semibold text-foreground'>{member.name}</h3>
                  <p class='text-sm text-muted-foreground'>{member.organization}</p>
                  <p class='text-sm text-primary font-medium'>{member.role}</p>
                </div>
                
                <p class='mb-3 text-sm text-muted-foreground italic'>"{member.slogan}"</p>
                
                {/* 研究方向标签 */}
                <div class='mb-3 flex flex-wrap gap-1'>
                  {member.tags.map((tag) => (
                    <a 
                      href={`/peoples/tags/${tag}`}
                      class='inline-flex items-center rounded-full bg-primary/10 px-2 py-1 text-xs font-medium text-primary transition-colors hover:bg-primary hover:text-white'
                    >
                      {tag}
                    </a>
                  ))}
                </div>
                
                <p class='mb-4 text-sm text-muted-foreground'>{member.description}</p>
                
                <Button href={member.href} style='primary' class='text-sm'>
                  查看个人主页
                </Button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- 社区成员统计 -->
    <section id='community-members' class='scroll-mt-20'>
      <h2 class='mb-6 text-2xl font-semibold text-foreground'>社区成员</h2>
      <div class='rounded-lg border bg-muted p-6'>
        <div class='grid gap-4 md:grid-cols-3'>
          <div class='text-center'>
            <div class='text-2xl font-bold text-primary'>4</div>
            <div class='text-sm text-muted-foreground'>核心成员</div>
          </div>
          <div class='text-center'>
            <div class='text-2xl font-bold text-primary'>12+</div>
            <div class='text-sm text-muted-foreground'>活跃贡献者</div>
          </div>
          <div class='text-center'>
            <div class='text-2xl font-bold text-primary'>50+</div>
            <div class='text-sm text-muted-foreground'>社区成员</div>
          </div>
        </div>
        <div class='mt-4 text-center'>
          <Button href='/peoples/tags' style='outline' class='text-sm'>
            按标签浏览成员
          </Button>
        </div>
      </div>
    </section>
  </div>
</PageLayout> 