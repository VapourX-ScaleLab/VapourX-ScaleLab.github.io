---
import type { GetStaticPaths, Page } from 'astro'
import type { CollectionEntry } from 'astro:content'

import { Paginator } from 'astro-pure/components/pages'
import PostPreview from '@/components/custom/PostPreview.astro'
import { getBlogCollection, sortMDByDate } from 'astro-pure/server'
import { Button } from 'astro-pure/user'
import PageLayout from '@/layouts/BaseLayout.astro'
import config from '@/site-config'
import { getUniqueAuthors } from '@/utils/authors'

export const prerender = true

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const allPosts = await getBlogCollection()
  const allPostsByDate = sortMDByDate(allPosts)
  const uniqueAuthors = getUniqueAuthors(allPostsByDate)

  return uniqueAuthors.flatMap((author) => {
    const filterPosts = allPostsByDate.filter((post) => 
      'author' in post.data && post.data.author === author
    )
    return paginate(filterPosts, {
      pageSize: config.content.blogPageSize,
      params: { author }
    })
  })
}

interface Props {
  page: Page<CollectionEntry<'blog'>>
}

const { page } = Astro.props
const { author } = Astro.params

const meta = {
  description: `View all posts by author - ${author}`,
  title: `Author: ${author}`
}

const paginationProps = {
  ...(page.url.prev && {
    prevUrl: {
      text: `← Previous Authors`,
      url: page.url.prev
    }
  }),
  ...(page.url.next && {
    nextUrl: {
      text: `Next Authors →`,
      url: page.url.next
    }
  })
}
---

<PageLayout {meta}>
  <Button title='Back' href='/blog' style='back' />
  <main class='mt-6 lg:mt-10'>
    <div class='mx-auto max-w-4xl'>
      <div id='content-header' class='animate'>
        <h1 class='mb-6 flex items-end gap-x-2 text-3xl font-medium'>
          Authors:
          <span class='text-2xl'>@{author}</span>
        </h1>
      </div>

      <section id='content' class='animate' aria-label='Blog post list'>
        <ul class='flex flex-col gap-y-3 text-start list-none pl-0'>
          {page.data.map((post) => <PostPreview as='h2' {post} detailed />)}
        </ul>
        <Paginator {...paginationProps} />
      </section>
    </div>
  </main>
</PageLayout> 