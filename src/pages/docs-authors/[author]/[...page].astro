---
import type { GetStaticPaths, Page } from 'astro'
import type { CollectionEntry } from 'astro:content'

import { Paginator } from 'astro-pure/components/pages'
import PostPreview from '@/components/custom/PostPreview.astro'
import { getBlogCollection, sortMDByDate } from 'astro-pure/server'
import { Button } from 'astro-pure/user'
import PageLayout from '@/layouts/BaseLayout.astro'
import config from '@/site-config'
import { getUniqueDocsAuthors } from '@/utils/authors'

export const prerender = true

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const allDocs = await getBlogCollection('docs')
  const allDocsByDate = sortMDByDate(allDocs)
  const uniqueAuthors = getUniqueDocsAuthors(allDocsByDate)

  return uniqueAuthors.flatMap((author) => {
    const filterDocs = allDocsByDate.filter((doc) => 
      'author' in doc.data && doc.data.author === author
    )
    return paginate(filterDocs, {
      pageSize: config.content.blogPageSize,
      params: { author }
    })
  })
}

interface Props {
  page: Page<CollectionEntry<'docs'>>
}

const { page } = Astro.props
const { author } = Astro.params

const meta = {
  description: `View all docs by author - ${author}`,
  title: `Docs Author: ${author}`
}

const paginationProps = {
  ...(page.url.prev && {
    prevUrl: {
      text: `← Previous Authors`,
      url: page.url.prev
    }
  }),
  ...(page.url.next && {
    nextUrl: {
      text: `Next Authors →`,
      url: page.url.next
    }
  })
}
---

<PageLayout {meta}>
  <Button title='Back' href='/docs' style='back' />
  <main class='mt-6 lg:mt-10'>
    <div id='content-header' class='animate'>
      <h1 class='mb-6 flex items-end gap-x-2 text-3xl font-medium'>
        Docs Authors:
        <span class='text-2xl'>@{author}</span>
      </h1>
    </div>

    <section id='content' class='animate' aria-label='Docs list'>
      <ul class='flex flex-col gap-y-3 text-start'>
        {page.data.map((doc) => <PostPreview as='h2' post={doc} detailed />)}
      </ul>
      <Paginator {...paginationProps} />
    </section>
  </main>
</PageLayout> 